<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    android:visibility="visible"
    tools:context=".CalcGold">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="20dip"
        android:paddingRight="20dip"
        android:layout_marginTop="50dip">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/Amount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="70dip"
                android:layout_marginBottom="16dip"
                android:hint="Weight of Gold (g)"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#121010"
                android:textSize="20sp"
                app:boxBackgroundColor="#6495ED" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxBackgroundColor="#FFFFFF"
            app:boxBackgroundMode="outline">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/CurrentGold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Current Gold value/gram"
                android:inputType="numberDecimal"
                android:textColor="#000000"
                android:textColorHint="#121010"
                android:textSize="20sp" />

        </com.google.android.material.textfield.TextInputLayout>

        <Spinner
            android:id="@+id/spinner"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="16dip"
            android:dropDownWidth="match_parent"
            android:spinnerMode="dropdown"
            android:textColor="#000000"
            android:textSize="18sp"
            tools:ignore="SpeakableTextPresentCheck" />

        <Button
            android:id="@+id/ButtonCalc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dip"
            android:layout_marginBottom="10dip"
            android:background="#2B5A2B"
            android:text="Calculate"
            android:textColor="#F6F3F3"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <Button
            android:id="@+id/ButtonResert"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dip"
            android:background="#2B5A2B"
            android:text="Reset"
            android:textColor="#FDFCFC"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TotalGoldValue"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dip"
            android:text="Total Gold Value:"
            android:textAlignment="textStart"
            android:textColor="#454545"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/ZakatPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dip"
            android:layout_marginBottom="10dip"
            android:text="Zakat Payable:"
            android:textAlignment="textStart"
            android:textColor="#454545"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/TotalZakat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dip"
            android:layout_marginBottom="5dip"
            android:text="Total Zakat:"
            android:textAlignment="textStart"
            android:textColor="#454545"
            android:textSize="20sp"
            android:textStyle="normal|bold" />

    </LinearLayout>


</RelativeLayout>